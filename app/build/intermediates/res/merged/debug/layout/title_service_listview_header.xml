<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#627C9F"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription">

    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:id="@+id/ll_srvTitle_CheckBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
      >

        <CheckBox
            android:id="@+id/cb_ServiceCheckedAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/text_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Id"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_srvTitleMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_srvTitle_CheckBox"
        android:padding="10dp"
        android:text="Member Name"
        android:textColor="@color/white"

        android:textSize="@dimen/title_text_size"
        android:layout_toStartOf="@+id/tv_srvTitleCount" />

    <TextView
      android:layout_toLeftOf="@+id/tv_srvTitleEdit"
        android:id="@+id/tv_srvTitleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:gravity="start"
        android:padding="10dp"
        android:text="Count"
        android:textColor="@color/white"

        android:textSize="@dimen/title_text_size" />
    <!--if this way dosen't work than add new Text View -->
        <TextView
            android:id="@+id/tv_srvTitleEdit"
            android:layout_alignParentRight="true"

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:padding="10dp"
            android:text="Edit"
            android:textColor="@color/white"

            android:textSize="@dimen/title_text_size" />
</RelativeLayout>