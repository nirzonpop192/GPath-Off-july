<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_action_normal">
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="button_action_special">
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="button_link">
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="text_single_line">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/spacing_tiny</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentTextLarge">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="detail_view">
