<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="5dp">


    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_row_assign_regDate"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:layout_toLeftOf="@+id/ibtn_group_sear_edit"
        android:gravity="center"
        android:hint="00/00/0000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_row_assign_name"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="2dp"
        android:hint="Name"
        android:paddingRight="5dp"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tv_row_assign_regDate"
        android:layout_toRightOf="@+id/tv_row_assign_id"
        android:layout_toEndOf="@+id/tv_row_assign_id" />

    <TextView
        android:id="@+id/mems_row_group_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:hint="group name"
        android:paddingTop="2dp"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/tv_row_assign_name"
        android:layout_alignBottom="@+id/tv_row_assign_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_row_assign_id"
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:hint="011010101000213"
        android:padding="2dp"
        android:paddingTop="2dp"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mems_row_group_name"
        android:layout_toEndOf="@+id/mems_row_group_name" />


    <!--       <ImageButton

               android:id="@+id/mem_ibtn_toAssigne"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"
               android:src="@drawable/ic_action_edit" />-->


</RelativeLayout>
