<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/warning_32"
        android:id="@+id/dialog_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/dialog_icon"
        android:id="@+id/custom_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"

        android:textSize="25sp"/>

    <TextView
        android:layout_below="@+id/custom_dialog_title"
        android:id="@+id/custom_dialog_msg"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sdfjlklksdjf"/>
    <Button
        android:id="@+id/custom_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="#07cbc8c8"
        android:layout_below="@+id/custom_dialog_msg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/label_color" />


</RelativeLayout>