<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siddiquinoor.restclient.activity.sub_activity.summary_sub.SummaryAssignBaseCriteria">

    <!-- Header aligned to top -->
    <include layout="@layout/header" />

    <!-- PAGE TITLE -->
    <RelativeLayout android:id="@+id/page_title"
        android:layout_below="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="List of Summary"
            android:textSize="@dimen/abc_text_size_large_material"
            android:padding="10dp"
            android:textAlignment="center"
            android:gravity="center" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_viewContanear"
        android:layout_below="@+id/page_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- program text view -->

        <LinearLayout

            android:layout_below="@+id/page_title"
            android:weightSum="1"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView
                    style="@style/lable_textView"
                    android:text="Program"
                    android:layout_width="wrap_content"

                    android:id="@+id/tv_awardLable" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView

                    style="@style/text_view"
                    android:layout_width="match_parent"

                    android:id="@+id/tv_assignSummarProg"
                    />
            </LinearLayout>
        </LinearLayout>

        <!-- village text view -->

        <LinearLayout


            android:weightSum="1"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView
                    style="@style/lable_textView"
                    android:text="Village"
                    android:layout_width="wrap_content"

                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView

                    style="@style/text_view"
                    android:layout_width="match_parent"

                    android:id="@+id/tv_assignSummarVillage"
                    />
            </LinearLayout>
        </LinearLayout>


        <!-- Criteria text view -->

        <LinearLayout


            android:weightSum="1"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView
                    style="@style/lable_textView"
                    android:text="Criteria"
                    android:layout_width="wrap_content"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >
                <TextView

                    style="@style/text_view"
                    android:layout_width="match_parent"

                    android:id="@+id/tv_assignSummarCriteria"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- title of list view  -->
    <LinearLayout
        android:id="@+id/table_title"
        android:layout_below="@+id/ll_viewContanear"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#627C9F">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:layout_height="match_parent"
            android:text="Group Name"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/text_table"
            android:layout_width="0dp"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Id"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <TextView
            android:gravity="center"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:padding="2dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/textView4" />
    </LinearLayout>
